@model IEnumerable<plc.Models.plCa>

@{
    ViewData["Title"] = "Danh Sách Cá";
}

<h1 class="mb-4">🐟 Danh Sách Cá</h1>

<p>
    <a asp-action="Create" class="btn btn-success">➕ Thêm Cá Mới</a>
</p>

<!-- Form tìm kiếm -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" id="searchString" class="form-control" placeholder="Nhập tên cá..." value="@ViewData["SearchString"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">🔍 Tìm kiếm</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Hình Ảnh</th>
            <th>@Html.DisplayNameFor(model => model.TenCa)</th>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.DanhGia)</th>
            <th>@Html.DisplayNameFor(model => model.LoaiNuoc)</th>
            <th>@Html.DisplayNameFor(model => model.KichThuoc)</th>
            <th>@Html.DisplayNameFor(model => model.MauSac)</th>
            <th>@Html.DisplayNameFor(model => model.ThoiGianSinhTon)</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@item.HinhAnh" width="100" height="100" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>❌ Không có ảnh</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.TenCa)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.DanhGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.LoaiNuoc)</td>
                    <td>@Html.DisplayFor(modelItem => item.KichThuoc)</td>
                    <td>@Html.DisplayFor(modelItem => item.MauSac)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThoiGianSinhTon)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">📄 Chi Tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Xóa</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted">⚠ Không có dữ liệu!</td>
            </tr>
        }
    </tbody>
</table>
