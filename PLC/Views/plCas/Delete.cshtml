@model plc.Models.plCa

@{
    ViewData["Title"] = "Xóa Cá";
}

<h1>🗑️ Xóa Cá</h1>

<h3 class="text-danger">⚠ Bạn có chắc chắn muốn xóa cá này không?</h3>

<div>
    <h4>📌 Thông Tin Cá</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên Cá</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TenCa)</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MoTa)</dd>

        <dt class="col-sm-2">Đánh Giá</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DanhGia) ⭐</dd>

        <dt class="col-sm-2">Loại Nước</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LoaiNuoc)</dd>

        <dt class="col-sm-2">Kích Thước (cm)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.KichThuoc)</dd>

        <dt class="col-sm-2">Màu Sắc</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MauSac)</dd>

        <dt class="col-sm-2">Thời Gian Sống (năm)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ThoiGianSinhTon)</dd>

        <!-- Hiển thị hình ảnh -->
        <dt class="col-sm-2">📷 Hình Ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" width="250" height="250" class="img-thumbnail" />
            }
            else
            {
                <p class="text-muted">❌ Không có ảnh</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirm('⚠ Bạn có chắc chắn muốn xóa cá này không?')">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">❌ Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">🔙 Quay Lại</a>
    </form>
</div>
